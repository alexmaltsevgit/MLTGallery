<Window x:Class="MLTGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MLTGallery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
		Loaded="OnLoad">
	<DockPanel LastChildFill="True">
		<Button DockPanel.Dock="Top" Background="AliceBlue" Height="50" Click="AddImage">Открыть директорию</Button>
		<ScrollViewer VerticalScrollBarVisibility="Auto">
		    <WrapPanel x:Name="wpImages"></WrapPanel>
		</ScrollViewer>
	</DockPanel>
</Window>
